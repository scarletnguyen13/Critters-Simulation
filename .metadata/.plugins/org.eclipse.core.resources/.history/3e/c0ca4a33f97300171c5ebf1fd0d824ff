import java.awt.*;

public class Bulldog extends Critter{
	
	private Color[] rainbow = {Color.RED,Color.ORANGE,Color.YELLOW,Color.GREEN,Color.CYAN,Color.BLUE,Color.PINK};
	private int count = 0;
	
	public Bulldog() {/*LEAVE BLANK*/};
	
	public Attack fight(String opponent) {
		if (opponent.equals("%")) { return Attack.ROAR; } 
		else { return Attack.SCRATCH; }
	}
	
	public Color getColor() {
		if (count == 7) { count = 0; }
		count++;
		return rainbow[count-1];
	}
	
	public String toString() {
		return getNeighbor(Direction.WEST);
	}
}
